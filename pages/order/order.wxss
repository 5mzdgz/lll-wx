/* pages/order/order.wxss */
page {
  background: #f9f9f9;
}

.content {
  background-color: rgba(249,249,249,1);
  padding-bottom: 20rpx;
}

.order-container {
  /* background-color: rgba(249,249,249,1); */
}

.order-top-box {
  overflow: hidden;
  padding: 14rpx 24rpx 14rpx 32rpx;
  font-size: 26rpx;
  color:rgba(30,30,30,1);
  background-color: #fff;
}

.order-top-box text {
  margin-right: 83rpx;
}

.order-top-box text:nth-child(5) {
  margin-right: 0;
}

.selected {
  border-bottom: 3rpx solid rgba(142,124,119,1);
  opacity: 1;
}

.list-box {
  overflow: hidden;
  width: 714rpx;
  margin: 18rpx 18rpx 0 18rpx;
  box-shadow: 0px 2rpx 6rpx rgba(0,0,0,0.04);
  opacity:1;
  border-radius: 14rpx;
  background-color: #fff;
}

.list-top-box {
  padding: 20rpx 20rpx 22rpx 28rpx;
  display: flex;
  flex-direction: row;
}

.order-number {
  margin-right: 270rpx;
  width: 330rpx;
  height: 26rpx;
  font-size: 18rpx;
  line-height: 26rpx;
  color:rgba(107,107,107,1);
  opacity:1;
}

.order-status {
  width: 66rpx;
  height: 32rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color:rgba(85,170,102,1);
}

.order-status-red {
  width: 66rpx;
  height: 32rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color:#EC4E4E;
}

.order-status-cancel {
   width: 66rpx;
  height: 32rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color:#333;
}

.list-bottom-box {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.order-img {
  width: 196rpx;
  height: 196rpx;
}

.order-img image {
  width: 100%;
  height: 100%;
}

.order-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 456rpx;
  padding-left: 26rpx;
}

.left-title {
  width: 320rpx;
  height: 56rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color:rgba(30,30,30,1);
  opacity: 1;
}

.left-param {
  width: 116rpx;
  height: 26rpx;
  font-size: 18rpx;
  line-height: 26rpx;
  color:rgba(107,107,107,1);
  opacity: 1;
}

.product-right-price {
  overflow: hidden;
  padding-left: 60rpx;
}

.right-price {
  width: 40rpx;
  height: 32rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color:rgba(107,107,107,1);
}

.right-count {
  width: 16rpx;
  height: 18rpx;
  font-size: 14rpx;
  line-height: 18rpx;
  color:rgba(107,107,107,1);
  margin-left: 50rpx;
}

.product-bottom-total {
  
}

.bottom-total {
  overflow: hidden;
  padding-left: 26rpx;
  padding-bottom: 15rpx;
}

.bottom-count {
  width: 142rpx;
  height: 26rpx;
  font-size: 18rpx;
  line-height: 26rpx;
  color:rgba(30,30,30,1);
}

.totals {
  width: 40rpx;
  height: 32rpx;
  font-size: 22rpx;
  line-height: 32rpx;
  color:rgba(107,107,107,1);
}

.freight {
  width: 122rpx;
  height: 26rpx;
  font-size: 18rpx;
  line-height: 26rpx;
  color:rgba(30,30,30,1);
  padding-left: 40rpx;
}

.btns {
  padding-left: 24rpx;
}

.status-itmes{
  float: right;
  text-align: center;
  width: 140rpx;
  height: 38rpx;
  background:rgba(255,255,255,1);
  border: 1px solid rgba(107,107,107,0.5);
  border-radius: 16rpx;
  font-size: 18rpx;
  line-height: 36rpx;
  color:rgba(107,107,107,1);
  margin: 0 12rpx 12rpx 12rpx;
}

.del-order {
  margin-left: 26rpx;
}

.order-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.order-empty .order-empty-img {
  width: 486rpx;
  height: 306rpx;
  margin-top: 166rpx;
}

.order-empty-text {
  height: 50rpx;
  font-size: 36rpx;
  font-weight: 500;
  line-height: 50rpx;
  color:rgba(141,141,141,1);
}

.hidan-box {
  position: fixed;
  bottom: 0;
  right: 0;
  top: 0;
  left: 0;
  background: #000;
  z-index: 20;
  opacity: 0.3;
}

.show-box {
  position: fixed;
  left: 13.33%;
  top: 21%;
  width: 73.33%;
  background: #fff;
  z-index: 30;
  border-radius: 12rpx;
}

.show-box .header {
  border-bottom: 1px solid #D6D6D6;
  height: 90rpx;
  line-height: 90rpx;
}

.header .colse {
  color: #c2c2c2;
  padding-left: 20rpx;
}

.header .title {
  margin-left: 23%;
  font-size: 30rpx;
  font-weight: 900;
}

.body-box {
  position: relative;
  text-align: center;
}

.body-box .body-name {
  font-size: 28rpx;
  padding: 30rpx 0;
}

.body-box .money-box {
  font-weight: 900;
}

.money-box .symbol {
  font-size: 30rpx;
}

.body-box .phone {
  width: 100%;
  text-align: left;
  padding-left: 30rpx;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 70rpx;
}

.short-message .codeInput {
  background: #eee;
  height: 60rpx;
  line-height: 60rpx;
  border-radius:14rpx;
}

.short-message .right {
  color:#fff;
  font-size: 26rpx;
  background: #EC4E4E;
  margin-left: 5%;
  width: 45%;
  border-radius:14rpx;
}

.body-box .short-message {
  font-size: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
}

.pass-confrim {
  width: 100%;
  color: #fff;
  font-size: 32rpx;
  background: #EC4E4E;
  border-radius: 0;
  border-bottom-left-radius: 12rpx;
  border-bottom-right-radius: 12rpx;
  
}

.passInput {
  position: relative;
  bottom: 0;
  margin: 30rpx 30rpx 48rpx 30rpx;
  /* left: -300rpx; */
  border-radius: 14rpx;
  background: #F8F8F8;
  font-size: 30rpx;
  text-align: left;
  border: 1px solid #D9D9D9;
  padding: 0 30rpx;
  height: 70rpx;
}

.place {
  font-size: 26rpx;
}