/* pages/collection/collection.wxss */
page{
  background: #f9f9f9;
}

.content {
  padding-bottom: 100rpx;
}

.collection-container {
  background-color: rgba(249,249,249,1);
}

.collection-item {
  height: 306rpx;
  padding-top: 1rpx;
}

.collection-box {
  margin: 15rpx 18rpx 16rpx 18rpx;
  width: 714rpx;
  height: 274rpx;
  background:rgba(255,255,255,1);
  box-shadow: 0px 2rpx 6rpx rgba(0,0,0,0.04);
  opacity: 1;
  border-radius: 14rpx;
}

.col-top-box {
  margin-left: 24rpx;
  padding-top: 6rpx;
  height: 26rpx;
  font-size: 18rpx;
  line-height: 26rpx;
  color:#6B6B6B;
}

.col-btm-box {
  display: flex;
  flex-direction: row;
  position: relative;
}

.checkbox {
  margin: 90rpx 12rpx 120rpx 26rpx;
}

.col-btm-box .check-img {
  position: absolute;
  left: 26rpx;
  top: 37.5%;
}

.selectedImg {
  width: 35rpx;
  height: 35rpx;
}

.check-active {
  display: none;
  width: 32rpx;
  height: 32rpx;
  margin-bottom: 8rpx;
}

.col-img {
  width: 196rpx;
  height: 196rpx;
  padding: 20rpx 26rpx 26rpx 20rpx;
}

.col-img image {
  width: 100%;
  height: 100%;
}

.col-info {
  position: relative;
  width: 450rpx;
}

.col-left-title {
  width: 280rpx;
  height: 56rpx;
  font-size: 20rpx;
  line-height: 28rpx;
  color:#1E1E1E;
}

.col-left-param {
  width: 105rpx;
  height: 26rpx;
  font-size: 18rpx;
  line-height: 26rpx;
  color:#6B6B6B;
  padding: 0 10rpx;
  border: 1px solid rgba(112,112,112,0.5);
  border-radius: 4rpx;
  margin-top: 8rpx;
}

.param-right {
  width: 9rpx;
  height: 14rpx;
}

.col-right-price {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  font-size: 14rpx;
  color: #EC4E4E;
}

.col-right-price .col-price {
  font-size: 24rpx;
}

.col-btns {
  position: absolute;
  right: 26rpx;
  bottom: 60rpx;
  font-size: 18rpx;
  color: #6B6B6B;
}

.col-btns .del-col {
  padding: 4rpx 24rpx;
  width: 120rpx;
  border: 1px solid rgba(112,112,112,0.5);
  border-radius: 16rpx;
  margin-right: 26rpx;
}

.col-btns .col-detail {
  padding: 4rpx 24rpx;
  width: 120rpx;
  border: 1px solid rgba(112,112,112,0.5);
  border-radius: 16rpx;
}

.col-pay-tabbar {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
}

.col-left-tabbar {
  width: 510rpx;
}

.checkboxs {
  width: 86rpx;
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color:#6B6B6B;
  padding-left: 44rpx;
}

.col-left-tabbar .tabbar-right {
  padding: 0 4rpx;
}

.tabbar-total-box {
  float: right;
  padding-right: 28rpx; 
}

.col-pay-total {
  color: #6B6B6B;
  font-size: 24rpx;
}

.col-symbol {
  color: #EC4E4E;
  font-size: 18rpx;
}

.col-total-price {
  color: #EC4E4E;
  font-size: 32rpx;
}

.col-total-pay {
  width: 240rpx;
  padding-left: 60rpx;
  background-color: #EC4E4E;
  color: #fff;
  font-size: 30rpx;
}

.no-coupon image{
  width: 100%;
  height: 340rpx;
  margin-top: 148rpx;
}

.no-coupon text{
  margin: 103rpx 0 0 200rpx;
  font-size: 28rpx;
  color:#828282;
}