.detail-like-box {
  width: 100%;
  height: 500rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.like-title {
  font-size: 38rpx;
  color:rgba(30,30,30,1);
  padding: 39rpx 0;
  text-align: center;
}

.detail-list-box {
  padding: 0 26rpx;
}

.like-list-box {
  width: 222rpx;
  height: 384rpx;
  float: left;
  margin-right: 16rpx;
}

.like-list-box:nth-child(3) {
  margin-right: 0rpx;
}

.like-list-box .list-img {
  width: 222rpx;
  height: 222rpx;
  /* border: 1px dotted #e0dfdf; */
}

.list-img image {
  width: 100%;
  height: 100%;
}

.product-title {
  width: 194rpx;
  height: 54rpx;
  font-size: 22rpx;
  color:rgba(123,123,123,1);
  line-height: 32rpx;
  margin: 19rpx 0 0 14rpx;
}

.product-price {
  height: 19rpx;
  font-size: 24rpx;
  color:rgba(47,47,47,1);
  line-height: 36rpx;
  margin: 19rpx 0 0 14rpx;
}