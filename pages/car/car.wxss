/* pages/car/car.wxss */
page {
  background: #F4F4F4;
}

.content {
  text-align: center;
  padding-top: 1rpx;
}

.goodsItem swiper{
  height:280rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.goodsItem .goodsMsg{
  height: 170rpx;
  width: 750rpx!important;
  background:#fff;
  display: flex;
  flex-direction: row;
  margin-left: -610rpx;
}

.goodsItem .goodsMsg .delBtn{
  color:#fff;
  line-height: 280rpx;
  font-size: 30rpx;
  text-align: center;
  display:flex;
  display:-webkit-flex;
  justify-content: flex-end;
}

.goodsItem .delBtn view, .del-box{
  position: relative;
  width: 145rpx;
}

.col-box-middle {
  background:rgba(96,96,96,1);
  color: #fff;
  font-size: 28rpx;
  margin: auto 0;
  padding: 104rpx 0;
}

.col-move {
  padding: 30rpx 0;
}

.del-box {
  position: absolute;
  right: 0;
  top: 0;
  font-size: 28rpx;
  color:rgba(255,255,255,1);
  background:rgba(231,44,44,1);
  margin-left: 140rpx;
  padding: 122rpx 0;
}

.car-box {
  padding-bottom: 160rpx;
}

.car-item-box {
  width: 100%;
  height: 280rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  margin-top: 20rpx;
}

.car-item-left {
  position: relative;
}

.checkbox {
  margin: 115rpx 20rpx;
}

.car-item-middel {
  padding: 36rpx 0;
  margin-right: 20rpx;
}

.item-middle-img {
  width:208rpx;
  height:208rpx;
}

.car-item-right {
  position: relative;
  width: 490rpx;
  padding: 36rpx 0rpx 36rpx 0;
  background-color: #fff;
}

.item-right-title {
  line-height: 35rpx;
  text-align: left;
  width: 300rpx;
  margin-right: 90rpx;
  margin-bottom: 10rpx;
  font-size: 28rpx;
  color:rgba(49,49,49,1);
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  word-break: break-all;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.item-right-price {
  position: absolute;
  bottom: 40rpx;
  left: 0rpx;
  font-size: 28rpx;
  color:rgba(236,78,78,1);
}

.item-right-color {
  text-align: left;
  font-size: 20rpx;
  color:#8e7c77;
}

.item-right-count {
  position: absolute;
  width: 230rpx;
  height: 60rpx;
  background:rgba(248,248,248,1);
  bottom: 36rpx;
  right: 50rpx;
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-right-count .reduce {
  font-size: 40rpx;
  width: 60rpx;
  height: 60rpx;
}

.reduce_one {
  width: 60rpx;
  height: 60rpx;
  color: #888;
}

.item-right-count .count {
  font-size: 30rpx;
  width: 110rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.item-right-count .add {
  width: 60rpx;
  height: 60rpx;
  font-size: 38rpx;
  color:rgba(44,44,44,1);
}

/*tabbar*/

.settlement {
  display: flex;
  position: fixed;
  bottom: 0;
  height: 88rpx;
  line-height: 88rpx;
  border-top: 1px solid rgba(238,238,238,1);
  background: #fff;
  flex-direction: row;
}

.checkbox-allcheck {
  margin-left: 30rpx;
  font-size: 0px;
  float: left;
  margin: 25rpx 20rpx 25rpx 36rpx;
}

.check-all-text {
  float: left;
  color:#7C7C7C;
}

.set-left {
  position: relative;
  width: 490rpx;
  font-size: 24rpx;
}

.car-tabbar {
  float: right;
  padding-right: 40rpx;
}

.set-middle-box {
  color: #2F2F2F;
}

.right-price-box {
  color: #EC4E4E;
}

.set-right-box {
  width: 260rpx;
  font-size: 30rpx;
  background:rgba(231,44,44,1);
  text-align: center;
  color: #fff;
}

/* 购物车为空 */

.car-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-img {
  width: 738rpx;
  height: 337rpx;
  margin-top: 148rpx;
}

.empty-text {
  font-size: 28rpx;
  color:rgba(130,130,130,1);
  margin-top: 103rpx;
}

.go-shopping {
  font-size: 28rpx;
  color:rgba(142,124,119,1);
  margin-top: 80rpx;
  padding: 0 89rpx;
  background:rgba(248,245,244,1);
  border:1px solid rgba(142,124,119,1);
  border-radius: 8rpx;
}

.goLogin {
  margin-top: 250rpx;
}