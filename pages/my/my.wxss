/* pages/my/my.wxss */
@import 'coupon/coupon.wxss';
@import 'about/about.wxss';
@import 'user/user.wxss';

page{ 
  background: #f9f9f9;
}

.my-container {
  background: rgba(249,249,249,1);
  position: relative;
  padding-bottom: 120rpx;
}

.my-header {
  height: 224rpx; 
  overflow: hidden;
  background-color: #fff;
  margin-bottom: 95rpx;
}

.header-box {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 26rpx 0 0 40rpx;
}

.middle {
  width: 450rpx;
}

.middle .top {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.middle .bottom {
  font-size: 16rpx;
  color: #787878;
  width: 400rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  word-break: break-all;
  -webkit-box-orient:vertical;
  overflow: hidden;
}

.middle .top image {
  width: 37rpx;
  height: 34rpx;
  margin-left: 12rpx;
}

.my-login {
  font-size: 34rpx;
  color:rgba(30,30,30,1);
  font-weight: bold;
  max-width: 400rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  word-break: break-all;
  -webkit-box-orient:vertical;
  overflow: hidden;
}

.author-img {
  width: 108rpx;
  height: 108rpx;
  margin-right: 16rpx;
  border-radius: 100%;
}

.header-box .right {
  position: absolute;
  right: 50rpx;
}

.header-box .right text {
  font-size: 22rpx;
  padding-right: 10rpx;
}

.header-box .right image {
  width: 13rpx;
  height: 23rpx;
}

.add-vip {
  position: absolute;
  width: 95%;
  top: 130rpx;
  height: 200rpx;
  margin-left: 2.5%;
  z-index: 30;
}

.floating-box {
  position: absolute;
  width: 95%;
  top: 165rpx;
  height: 126rpx;
  margin-left: 2.5%;
  background: #fff;
  z-index: 30;
  border-radius: 24rpx;
  box-shadow:0px 6px 12px rgba(0,0,0,0.16);
  display: flex;
  flex-direction: row;
  align-items: center;
}

.items-box {
  flex: 1;
  display: flex;
  flex-direction: row;
  align-items: center; 
  justify-content: center;
  font-size: 24rpx;
}

.invi-box {
  border-right: none;
}

.items-box image {
  margin-right: 18rpx;
  width: 76rpx;
  height: 50rpx;
}

.invitation {
  width: 96.8%;
  height: 164rpx;
  margin-left: 1.6%;
}

.invi-box image {
  width: 54rpx;
  height: 46rpx;
}

.list-box {
  font-size: 28rpx;
  color:rgba(30,30,30,1);
  background-color: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.payment-box {
  margin-bottom: 20rpx;
}

.payment-box .list-item {
  width: 20%;
  text-align: center;
}

.payment-box .list-item image {
  width: 40rpx;
  height: 40rpx;
}

.list-item:nth-child(3) image {
  width: 53rpx;
  height: 36rpx;
  margin-top: 6rpx;
  margin-bottom: 3rpx;
}

.order-box {
  padding: 25rpx 25rpx;
  margin-top: 10rpx;
  border-bottom: 1px solid #EEEEEE;
  font-size: 28rpx;
}

.left-order {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.left-order .list-icon {
  padding-right: 20rpx;
}

.payment-box {
  padding: 30rpx 0; 
  box-shadow:0px 4px 10px rgba(0,0,0,0.03);
}

.list-box .list-icon {
  width: 30rpx;
  height: 32rpx;
}

.maintain-box {
  width: 100%;
  height: 212rpx;
  background: #fff;
}

.maintain-top {
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}

.maintain-top .maintain-top-left {
  width: 231rpx;
  height: 72rpx;
  font-size: 28rpx;
  line-height: 72rpx;
}

.maintain-top .maintain-top-left .iconfont {
  margin-right: 20rpx;
  margin-left: 28rpx;
}

.maintain-top .icon-xiangyou {
  position: absolute;
  right: 30rpx;
  top: 23rpx;
  font-size: 26rpx;
  color: #fff;
}

.maintain-top image {
  position: absolute;
  right: 0;
  top: 0;
  width: 519rpx;
  height: 74rpx;
}

.maintain-btm {
  display: flex;
  flex-direction: row;
  align-items: center;

}

.maintain-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 140rpx;
  justify-content: center;
  font-size: 26rpx;
}

.maintain-item image {
  width: 40rpx;
  height: 40rpx;
  padding: 8rpx;
}

.maintain-item:nth-child(1) image {
  width: 56rpx;
  height: 56rpx;
  padding: 0;
}

.uitls-box {
  background: #fff;
  margin-top: 20rpx;
  box-shadow:0px 4px 10px rgba(0,0,0,0.03);
}

.uitls-box .uitl-top {
  font-size: 28rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 28rpx;
  border-bottom: 1px solid #eee;
}

.uitls-box .uitl-top image {
  width: 35rpx;
  height: 35rpx;
  margin-right: 18rpx;
}

.uitl-body {
  height: 254rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body-item {
  flex: 1;
  font-size: 20rpx;
}

.body-item .uitl {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.body-item .uitl .img {
  width: 52rpx;
  height: 52rpx;
  margin-bottom: 4rpx;
}

.dashed {
  width: 2px;
  height: 50rpx;
  background: #eee;
}
