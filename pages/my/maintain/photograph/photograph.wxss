/* pages/my/maintain/photograph/photograph.wxss */
page {
  background: #f9f9f9;
}

.photograph-container {
  font-size: 22rpx;
  color: #505050;
  padding-bottom: 150rpx;
}

.photograph-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-top: 48rpx;
}

.photograph-top .title-icon {
  width: 8rpx;
  height: 42rpx;
  background: #505050;
}

.photograph-top text {
  font-size: 30rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-left: 20rpx;
  color: #000;
}

.matter-box {
  margin-left: 28rpx;
  line-height: 40rpx;
}

.photograph-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 35rpx 0;
}

.on-photograph {
  width: 590rpx;
  height: 368rpx;
  background: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.on-photograph .photograph-img {
  width: 237rpx;
  height: 160rpx;
  margin-bottom: 50rpx;
}

.on-photograph .item-title {
  width: 100%;
  height: 85rpx;
  line-height: 85rpx;
  display: flex;
  flex-direction: row;
  align-content: center;
}

.item-title .left{
  font-size: 62rpx;
  font-weight: bold;
  color: #828282;
  padding-left: 24rpx;
}

.item-title .right{
  padding-left: 18rpx;
}

.new-img {
  width: 590rpx;
  height: 368rpx;
  background: #eee;
}

.photograph-button {
  height: 76rpx;
  line-height: 76rpx;
  font-size: 32rpx;
  width: 100%;
  background: #8E7C77;
  border-radius: 0;
  color: #fff;
}

.more-photo {
  width: 100%;
  text-align: center;
  color: #445bc0;
}

.confrim {
  position: fixed;
  bottom: 20rpx;
  width: 650rpx;
  left: 50rpx;
  height: 74rpx;
  line-height: 74rpx;
  background: #EC4E4E;
  color: #fff;
  font-size: 32rpx;
}
