/* pages/my/cash-mode/cash-mode.wxss */
page{ 
  background: #f9f9f9;
}

.mode-container {
  padding-top: 1px;
}

.body-item {
  margin-top: 26rpx;
  padding: 0 30rpx;
  background: #fff;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;
}

.conter {
    float: left;
    display: flex;
    flex-direction: row;
    align-items: center;
 }

 .conter .wx-img {
  margin-right: 50rpx;
   width: 44rpx;
   height: 44rpx;
 }

.cash-right {
  float: right;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.mark {
  width: 32rpx;
  height: 32rpx;
  line-height: 162rpx;
}

.account {
  margin: 0 15rpx;
  color: #c2c2c2;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  word-break: keep-all;
  -webkit-box-orient:vertical;
  overflow: hidden;
}

.account_active {
  color: #1e1e1e;
}

.arrow-right {
  width: 20rpx;
  height: 34rpx;
}

.footer {
  position: fixed;
  bottom: 100rpx;
  font-size: 24rpx;
  color: #707070;
  left: 40%;
}

.footer .arrow-right {
  width: 12rpx;
  height: 20rpx;
}