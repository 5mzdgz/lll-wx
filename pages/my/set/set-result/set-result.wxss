page{ 
  background: #f9f9f9;
}

.set-success {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.invitation {
  margin-top: 44rpx;
  width: 100%;
  height: 184rpx;
}

.set-img {
  margin-top: 100rpx;
  margin-left: -30rpx;
}

.set-img image {
  width: 304rpx;
  height: 188rpx;
}

.success-title {
  font-size: 36rpx;
  margin: 50rpx 0 22rpx 0;
}

.success-sub {
  font-size: 24rpx;
  color: #777777;
}

.cash-money {
  width: 90%;
  overflow: hidden;
  clear: both;
  margin-top: 60rpx;
  padding: 0 5%;
  font-size: 26rpx;
  height: 96rpx;
  line-height: 96rpx;
  background: #fff;
  box-shadow:0px 6px 6px rgba(0,0,0,0.02);
}

.cash-money .left{
  float: left;
  color: #777777;
}

.cash-money .right {
  float: right;
  font-weight: bold;
}

button {
  width: 68%;
  position: fixed;
  bottom: 40rpx;
  right: 16%;
  height: 74rpx;
  line-height: 74rpx;
  font-size: 32rpx;
  color: #fff;
  background: #EC4E4E;
}
