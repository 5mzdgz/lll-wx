}

.gouse .use-right-coupon {
  position: absolute;
  right: 26rpx;
  bottom: 5rpx;
  height:22rpx;
  font-size:16rpx;
  line-height:22rpx;
  color:#FFCB91;
}

.gouse .use-right-discount {
  position: absolute;
  right: 26rpx;
  bottom: 5rpx;
  height:22rpx;
  font-size:16rpx;
  line-height:22rpx;
  color:#8DB0FF;
}

.no-coupon {
  text-align: center;
  background: #F9F9F9;
}

.no-coupon image{
  width: 100%;
  height: 340rpx;
  margin-top: 148rpx;
}

.no-coupon text{
  margin-top: 103rpx;
  font-size: 28rpx;
  color:#828282;
}