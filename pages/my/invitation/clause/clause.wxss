.clause {
  position: fixed;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  background: #000;
  opacity: .6;
  z-index: 88;
}

.clause-box {
  position: fixed;
  bottom: 13%;
  left: 10.7%;
  background: #fff;
  width: 550rpx;
  height: 933rpx;
  z-index: 99;
  border-radius: 20rpx;
  text-align: center;
  font-size: 20rpx;
  padding: 24rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #707070;
  background: #FF6E3A;
}

.clause-content {
  width: 490rpx;
  height: 778rpx;
  border: 1px solid #B9B9B9;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
  text-align: justify;
  background: #fff;
}

.clause-title {
  font-size: 34rpx;
  padding: 20rpx;
  color: #fff;
}

.clause-p {
  width: 454rpx;
  padding: 0 20rpx 0 24rpx;
  text-align: left;
}

::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}