/* pages/my/invitation/invitation.wxss */
@import "./clause/clause.wxss";
page {
  background: #f9f9f9;
}

.invitation-container {
  position: relative;
}

.invitation-banner {
  width: 100%;
}

.rule {
  position: absolute;
  right: 0;
  top: 1.2%;
  width: 125rpx;
  height: 50rpx;
  line-height: 50rpx;
  z-index: 10;
  font-size: 18rpx;
  background: #ea4e1c;
  color: #fff;
  text-align: center;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}

.confrim-save {
  height: 74rpx;
  line-height: 74rpx;
  color: #fff;
  background: #9B9B9B;
  width: 100%;
  margin-top: 30rpx;
}

.clause-icon {
  position: fixed;
  bottom: 4%;
  left: 45%;
  z-index: 99;
}

.share {
  position: absolute;
  z-index: 10;
  bottom: 21.5%;
  background: linear-gradient(#FF8C49,#FF522C);
  width: 70.67%;
  margin-left: 14.67%;
  height: 74rpx;
  font-size: 30rpx;
  color: #fff;
  border-radius: 20rpx;
}

.two-btm {
  overflow: hidden;
  clear: both;
  position: absolute;
  bottom: 10%;
  width: 100%;
}

.two-btm button {
  float: left;
  width: 258rpx;
  height: 60rpx;
  font-size: 26rpx;
  line-height: 60rpx;
  color: #fff;
  left: 90rpx;
  display: flex;
   flex-direction: row;
  align-content: center;
  justify-content: center;
  border-radius: 30rpx;
}

.two-btm button image {
  margin-top: 13rpx;
  margin-right: 10rpx;
  width: 32rpx;
  height: 32rpx;
}

.two-btm .generate {
  margin-right: 54rpx;
  background: linear-gradient(#FC8060,#D92E1D);
}

.two-btm .face {
  background: linear-gradient(#FF8C49,#FF522C);
} 

.code-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #fff;
  width: 550rpx;
  height: 628rpx;
  border-radius: 26rpx;
  color: #8B8B8B;
}

.code-box image {
  width: 350rpx;
  height: 350rpx;
  margin-top: 72rpx;
}

.code-box .popup-title {
  line-height: 60rpx;
  margin-top: 20rpx;
}

.opinion-success icon {
  margin-top: 50rpx;
}

.swiper-container{
  margin-top: 30rpx;
  width: 100%;
  position: relative;
}

swiper{
  height: 800rpx;
}

.item-image {
  position: absolute;
  top: 118rpx;
  left: 0;
  width: 424rpx;
  height: 544rpx;
  margin: 0 23rpx;
  border-radius: 16rpx;
}

.active_img {
  position: absolute;
  top: 10rpx;
  left: 0;
  opacity: 1;
  z-index: 10;
  height: 754rpx;
  width: 424rpx;
  transition: all 0.2s ease-in 0s;
}

.swiper-container .dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0rpx;
  display: flex;
  justify-content: center;
}

.swiper-container .dots .dot{
  margin: 0 8rpx;
  width: 14rpx;
  height: 14rpx;
  background: #e0dfdf;
  border-radius: 8rpx;
  transition: all .6s;
}

.swiper-container .dots .dot.active{
  width: 38rpx;
  background: #fff;
}

.opinion-success .confirmTap {
  margin-top: 50rpx;
  width: 412rpx;
  height: 62rpx;
  line-height: 62rpx;
  background: #EC4E4E;
  color: #fff;
  font-size: 28rpx;
}

.commission {
  font-size: 28rpx;
  margin-top: 24rpx;
  background: #fff;
  padding: 20rpx 36rpx;
}

.commission-top {
  padding-bottom: 12rpx;
  color: #8E7C77;
}

.commission-top, .commission-middle,.commission-bottom {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: space-around;
}

.commission-middle {
  color: #8E7C77;
  font-size: 26rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #D6D6D6;
}

.commission-bottom {
  font-size: 24rpx;
}

.top-item,.bottom-item {
  flex: 1;
  text-align: center;
  overflow: hidden;
  clear: both;
  line-height: 55rpx;
}

.item-left {
  text-align: left;
}

.item-right {
  text-align: right;
}

.top-item .money {
  color: #EC4E4E;
}

.bottom-item image {
  float: left;
  width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  background: #FF8C49;
  margin-top: 10rpx;
  margin-right: 7rpx;
}

.bottom-item .user-info {
  float: left;
  line-height: 30rpx;
}

 .bottom-item .user-info .user-name {
  width: 130rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 1;
  word-break: break-all;
  -webkit-box-orient:vertical;
  overflow: hidden;
  font-size: 20rpx;
 }

.bottom-item .user-info .time {
  font-size: 14rpx;
  color: #848484;
}

button[disabled] {
  color: #fff !important;
  background: #C2C2C2 !important;
  border-color: #C2C2C2 !important;
}